<div class="container">
  <h2>
    <%= @list.name %>
  </h2>
  <%= link_to 'Back to all lists', lists_path, class:"btn btn-primary" %>
  <%= link_to 'Create bookmark', new_list_bookmark_path(@list), class:"btn btn-primary" %>
  <h3> What do our customers think? Here are the bookmarks 🕵🏻‍♂️</h3>
  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li>
        <h3>Bookmark: <%= bookmark.comment %></h3>
        <p>Movies: <%= bookmark.movie_id %></p>
      </li>
    <% end %>
  </ul>
</div>
